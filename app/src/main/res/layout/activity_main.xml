<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/random_dog_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/random_dog_generator"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276" />


    <Button
        android:id="@+id/generate_dogs_btn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/round_button"
        android:onClick="generateDog"
        android:text="@string/generate_dogs"
        android:textAllCaps="false"
        android:textColor="@drawable/button_text_selector"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.572" />

    <Button
        android:id="@+id/my_recently_generated_dog_btn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/round_button"
        android:onClick="recentlyGenerateDog"
        android:text="@string/my_recently_generated_dogs"
        android:textAllCaps="false"
        android:textColor="@drawable/button_text_selector"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.661" />

</androidx.constraintlayout.widget.ConstraintLayout>